  <script>
    // Set current date
    document.getElementById('current-date').innerText = new Date().toLocaleDateString('en-US', { 
      weekday: 'long', 
      year: 'numeric', 
      month: 'long', 
      day: 'numeric' 
    });
    
    // Logout function
    function handleLogout() {
      window.location.href = '/api/logout';
    }
    
    // Tab switching functionality
    function setActiveTab(tabId) {
      const tabs = ['overview', 'sensors', 'feeding', 'health'];
      
      tabs.forEach(tab => {
        const tabElement = document.getElementById(`tab-${tab}`);
        
        if (tab === tabId) {
          tabElement.style.fontWeight = 'bold';
          tabElement.style.color = 'var(--primary-color)';
          tabElement.style.borderBottom = '2px solid var(--primary-color)';
        } else {
          tabElement.style.fontWeight = 'normal';
          tabElement.style.color = '#666';
          tabElement.style.borderBottom = 'none';
        }
      });
    }

    // Fetch real-time sensor data
    function fetchSensorData() {
      fetch('/api/data')
        .then(response => response.json())
        .then(data => {
          console.log('Fetched sensor data:', data);
          // Update temperature displays
          const tempDisplays = document.querySelectorAll('.sensor-value:nth-child(2)');
          tempDisplays.forEach(display => {
            if (data.temperature && data.temperature !== '--') {
              display.textContent = data.temperature;
            }
          });
          
          // Update main temperature display
          const mainTempDisplay = document.querySelector('.container > div:nth-child(2) > div:nth-child(2) > div:first-child');
          if (mainTempDisplay && data.temperature && data.temperature !== '--') {
            mainTempDisplay.textContent = data.temperature;
          }
          
          // Update pH level
          const phDisplay = document.querySelector('.card:nth-child(2) .sensor-value');
          if (phDisplay && data.pH && data.pH !== '--') {
            phDisplay.textContent = data.pH;
          }
          
          // Update feeding status
          const feedingDisplay = document.querySelector('.card:nth-child(3) .sensor-value');
          if (feedingDisplay && data.feedingAgo && data.feedingAgo !== '--') {
            feedingDisplay.textContent = 'Last: ' + data.feedingAgo;
          }
          
          // Update water level
          const waterLevelDisplay = document.querySelector('.card:nth-child(4) .sensor-value');
          if (waterLevelDisplay && data.waterLevel && data.waterLevel !== '--') {
            waterLevelDisplay.textContent = data.waterLevel;
          }
        })
        .catch(error => console.error('Error fetching sensor data:', error));
    }
    
    // Fetch data initially and then every 5 seconds
    fetchSensorData();
    setInterval(fetchSensorData, 5000);
  </script>
